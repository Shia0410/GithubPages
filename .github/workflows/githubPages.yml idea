name: Deploy to GitHub Pages

on:
  push:
    branches:
      - main  # Change this to your main branch name

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v2

      - name: Set up Node.js
        uses: actions/setup-node@v2
        with:
          node-version: '14'  # Adjust Node.js version if needed

      - name: Install dependencies
        run: npm install  # Or use `yarn install` if you use yarn

      - name: Build
        run: npm run build  # Adjust to your build script

      - name: Deploy to GitHub Pages
        run: |
          git config --global user.email "github-actions@github.com"
          git config --global user.name "GitHub Actions"
          npx --no-install gh-pages -d <your-build-folder>  # Replace with your build output directory

